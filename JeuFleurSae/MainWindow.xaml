<Window
    x:Class="JeuFleurSae.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuFleurSae"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Canvas KeyDown="Canvas_KeyDown">
        <Canvas.Background>
            <ImageBrush ImageSource="/Fond niveaux feu.png" />
        </Canvas.Background>
        <Rectangle
            x:Name="Sol"
            Canvas.Top="332"
            Width="800"
            Height="130"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="50"
            Canvas.Top="292"
            Width="26"
            Height="40">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Sprite perso/arret.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Canvas.Left="10"
            Canvas.Top="10"
            Width="48"
            Height="48"
            Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Fleur/fleur0.png" />
            </Rectangle.Fill>
        </Rectangle>

    </Canvas>
</Window>
