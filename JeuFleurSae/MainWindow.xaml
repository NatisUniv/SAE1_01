<Window
    x:Class="JeuFleurSae.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuFleurSae"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    KeyDown="Window_KeyDown"
    KeyUp="Window_KeyUp"
    MouseDown="Window_MouseDown"
    mc:Ignorable="d">
    <Canvas x:Name="Zone">
        <Canvas.Background>
            <ImageBrush ImageSource="/Fond niveaux/Fond niveau Terre.png" />
        </Canvas.Background>
        <Rectangle
            x:Name="Sol"
            Canvas.Top="392"
            Width="800"
            Height="130"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="22"
            Canvas.Top="352"
            Width="26"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Sprite perso/arret.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Canvas.Left="10"
            Canvas.Top="10"
            Width="48"
            Height="48"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Fleur/fleur0.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            x:Name="Boss"
            Canvas.Left="641"
            Canvas.Top="292"
            Width="100"
            Height="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Boss/Terre.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Label
            x:Name="LabVieBoss"
            Canvas.Left="672"
            Canvas.Top="16"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="100"
            Foreground="Black" FontSize="20" FontFamily="Gill Sans Ultra Bold" />

    </Canvas>
</Window>
